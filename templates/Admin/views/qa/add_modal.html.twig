{% embed 'Admin/partials/modal.html.twig' %}
    {% block title %}Add QA{% endblock %}
    {% block modalClass %}modal-dialog-centered p-10 mw-900px{% endblock %}
    {% block body %}
        {{ form_start(form) }}
        <div class="fv-row mb-10">
            <!--begin::Label-->
            <label class="required fs-5 fw-semibold mb-2">Your Question</label>
            <!--end::Label-->
            <!--begin::Input-->
            {{ form_widget(form.question, {attr: {class: 'form-control fs-7', placeholder: "Enter question"}}) }}
            <!--end::Input-->
        </div>
        <!--end::Input group-->
        <div class="fv-row mb-10">
            <!--begin::Label-->
            <label class="required fs-5 fw-semibold mb-2">Your Answer</label>
            <!--end::Label-->
            <!--begin::Input-->
            {{ form_widget(form.answer, {attr: {class: 'form-control fs-7', placeholder: "Enter answer"}}) }}
            <!--end::Input-->
        </div>
        <!--end::Input group-->
        <button type="button" class="btn btn-primary"
                data-action="click->Admin--qa-add#onSubmit">{% if qa is defined %}Save changes{% else %}Submit{% endif %}</button>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}