{% extends 'Admin/base.html.twig' %}
{% block title %}CMS-Preview Block{% endblock %}

{% block toolbar %}
    {% embed 'Admin/partials/toolbar.html.twig' %}
        {% block toolbar_title %}Preview Block | {{ block.title }}{% endblock toolbar_title %}

        {% block toolbar_breadcrumbs %}
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a href="{{ path('app_admin_page_index') }}" class="text-muted text-hover-primary">Page</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a href="{{ path('app_admin_block_index', {'id': block.post.page.id}) }}" class="text-muted text-hover-primary">Block</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">Preview-Block</li>
            <!--end::Item-->
        {% endblock toolbar_breadcrumbs %}

        {% block toolbar_button_actions %}
            <a href="#"
               data-amz-btn-open-modal
               class="btn btn-sm fw-bold btn-primary">Create</a>
        {% endblock toolbar_button_actions %}
    {% endembed %}
{% endblock %}

{% block body %}
    <iframe loading="{{ loop is defined and loop.index < 2 ? 'eager' : 'lazy' }}"
            sandbox="allow-scripts allow-same-origin allow-forms allow-presentation"
            class="w-100 h-700px mb-8"
            src="{{ path('app_admin_block_run_preview', {'id': block.id}) }}"
            allow="fullscreen" width="600" height="400"></iframe>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}