{% extends 'Admin/base.html.twig' %}
{% block title %}CMS - Add Block{% endblock %}

{% block toolbar %}
    {% embed 'Admin/partials/toolbar.html.twig' %}
        {% block toolbar_title %}Add Block{% endblock toolbar_title %}
        {% block toolbar_breadcrumbs %}
            <li class="breadcrumb-item text-muted">
                <a href="{{ path('app_admin_block_index') }}" class="text-muted text-hover-primary">Block</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Add</li>
        {% endblock %}
        {% block toolbar_button_actions %}{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    {% import 'Admin/partials/macros.html.twig' as macros %}

    {{ form_start(form, {
        action: path('app_admin_block_edit', {'id': block.id}),
        attr: { class: 'form d-flex flex-column flex-lg-row' }
    }) }}

    <!-- ASIDE COLUMN -->
    <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
        {% for f,label in {
            'imageIcon':'Image Icon',
            'image':'Desktop Image',
            'imageMobile':'Mobile Image',
            'background':'Background',
            'mobileBackground':'Mobile Background'
        } %}
            <div class="card card-flush py-4">
                <div class="card-header"><div class="card-title"><h2>{{ label }}</h2></div></div>
                <div class="card-body text-center pt-0">
                    <style>
                        .image-input-placeholder {
                            background-image: url('{{ asset('themes/media/svg/files/blank-image.svg') }}');
                        }
                        [data-bs-theme="dark"] .image-input-placeholder {
                            background-image: url('{{ asset('themes/media/svg/files/blank-image-dark.svg') }}');
                        }
                    </style>
                    <div class="image-input image-input-empty image-input-outline image-input-placeholder mb-3" data-kt-image-input="true">
                        <div class="image-input-wrapper w-150px h-150px"></div>
                        <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change">
                            {{ form_widget(attribute(form, f), { attr: { accept: '.png, .jpg, .jpeg, .webp' } }) }}
                        </label>
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel"></span>
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove"></span>
                    </div>
                    <div class="text-muted fs-7">Only PNG, JPG, JPEG, WebP</div>
                </div>
            </div>
        {% endfor %}

        <!-- STATUS -->
        <div class="card card-flush py-4">
            <div class="card-header"><div class="card-title"><h2>Status</h2></div></div>
            <div class="card-body pt-0">
                {{ form_widget(form.status) }}
                <div class="text-muted fs-7">Set block status</div>
            </div>
        </div>
    </div>

    <!-- MAIN COLUMN -->
    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
        <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-semibold mb-n2">
            <li class="nav-item"><a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#gen">General</a></li>
            <li class="nav-item"><a class="nav-link text-active-primary pb-4" data-bs-toggle="tab" href="#adv">Advanced</a></li>
        </ul>

        <div class="tab-content">
            <!-- GENERAL TAB -->
            <div class="tab-pane fade show active" id="gen" role="tabpanel">
                <div class="d-flex flex-column gap-7 gap-lg-10">
                    <div class="card card-flush py-4">
                        <div class="card-header"><div class="card-title"><h2>General</h2></div></div>
                        <div class="card-body pt-0">
                            {% for field in ['title', 'subTitle', 'slug', 'sortOrder', 'type'] %}
                                <div class="mb-10 fv-row">
                                    <label class="form-label">{{ field|title }}</label>
                                    {{ form_widget(attribute(form, field), { attr: { class: 'form-control' } }) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Links -->
                    <div class="card card-flush py-4">
                        <div class="card-header"><div class="card-title"><h2>Links & Relations</h2></div></div>
                        <div class="card-body pt-0">
                            {% for field in ['url', 'location', 'videoUrl', 'textIcon', 'kind', 'post', 'category'] %}
                                <div class="mb-10 fv-row">
                                    <label class="form-label">{{ field|title }}</label>
                                    {{ form_widget(attribute(form, field), { attr: { class: 'form-control' } }) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- ADVANCED TAB -->
            <div class="tab-pane fade" id="adv" role="tabpanel">
                <div class="d-flex flex-column gap-7 gap-lg-10">
                    <div class="card card-flush py-4">
                        {% if form.kindData is defined %}
                            <div class="card-header"><div class="card-title"><h2>Block Configuration</h2></div></div>
                            <div class="card-body pt-0">
                                {{ form_widget(form.kindData) }}
                            </div>
                        {% endif %}
                        <div class="card-header"><div class="card-title"><h2>Description</h2></div></div>
                        <div class="card-body pt-0">
                            {{ form_widget(form.description, { attr: { class: 'form-control mb-2', rows: 5 } }) }}
                        </div>

                         {% if form.kindData is not defined %}
                            <div class="card-header"><div class="card-title"><h2>Content</h2></div></div>
                            <div class="card-body pt-0">
                                {{ form_widget(form.content, { attr: { class: 'form-control mb-2 ckeditor' } }) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>


            <!-- SUBMIT -->
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_admin_block_index') }}" class="btn btn-light me-5">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <span class="indicator-label">Save Changes</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}