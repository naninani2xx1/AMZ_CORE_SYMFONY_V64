{% extends 'Admin/base.html.twig' %}
{% block title %}CMS - Add Block{% endblock %}

{% block toolbar %}
    {% embed 'Admin/partials/toolbar.html.twig' %}
        {% block toolbar_title %}Add Block{% endblock toolbar_title %}

        {% block toolbar_breadcrumbs %}
            <li class="breadcrumb-item text-muted">
                <a href="{{ path('app_admin_block_index') }}" class="text-muted text-hover-primary">Block</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Add</li>
        {% endblock toolbar_breadcrumbs %}

        {% block toolbar_button_actions %}{% endblock toolbar_button_actions %}
    {% endembed %}
{% endblock %}

{% block body %}
    {% import 'Admin/partials/macros.html.twig' as macros %}
    {{ form_start(form, {action:path('app_admin_block_add'),attr: {class: "form"}}) }}
    <div class="tab-content">
        <!-- General Tab -->
        <div class="tab-pane fade show active" id="gen" role="tab-panel">
            <div class="d-flex flex-column gap-7 gap-lg-10">
                <!--begin::General card-->
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title"><h2>General</h2></div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="mb-10 fv-row">
                            <label class="form-label">Title</label>
                            {{ form_widget(form.title, {attr:{class:"form-control"}}) }}
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label">Sub Title</label>
                            {{ form_widget(form.subTitle, {attr:{class:"form-control"}}) }}
                        </div>

                        <div class="mb-10 fv-row">
                            <label class="form-label">Sort Order</label>
                            {{ form_widget(form.sortOrder, {attr:{class:"form-control"}}) }}
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label">Type</label>
                            {{ form_widget(form.type, {attr:{class:"form-control"}}) }}
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label">Slug</label>
                            {{ form_widget(form.slug, {attr:{class:"form-control"}}) }}
                        </div>
                    </div>
                </div>

                <!--begin::Links & Relations card-->
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title"><h2>Links & Relations</h2></div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="mb-10 fv-row">
                            <label class="form-label">Kind</label>
                            {{ form_widget(form.kind, {attr:{class:"form-control"}}) }}
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label">Post</label>
                            {{ form_widget(form.post, {attr:{class:"form-control"}}) }}
                        </div>
                        <div class="mb-10 fv-row">
                            <label class="form-label">Category</label>
                            {{ form_widget(form.category, {attr:{class:"form-control"}}) }}
                        </div>

        <div class="d-flex justify-content-end">
            <a href="{{ path('app_admin_block_index') }}" class="btn btn-light me-5">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <span class="indicator-label">Save Changes</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>

    {{ form_end(form) }}
    {% endblock %}

    {% block javascripts %}{{ parent() }}{% endblock %}
