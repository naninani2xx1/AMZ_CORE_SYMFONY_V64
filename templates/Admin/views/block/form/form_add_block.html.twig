{% extends 'Admin/base.html.twig' %}
{% block title %}CMS - Add Block{% endblock %}

{% block toolbar %}
    {% embed 'Admin/partials/toolbar.html.twig' %}
        {% block toolbar_title %}Add Block{% endblock toolbar_title %}

        {% block toolbar_breadcrumbs %}
            <li class="breadcrumb-item text-muted">
                <a href="{{ path('app_admin_block_index') }}" class="text-muted text-hover-primary">Block</a>
            </li>
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <li class="breadcrumb-item text-muted">Add</li>
        {% endblock toolbar_breadcrumbs %}

        {% block toolbar_button_actions %}{% endblock toolbar_button_actions %}
    {% endembed %}
{% endblock %}

{% block body %}
    {% import 'Admin/partials/macros.html.twig' as macros %}
    {{ form_start(form, {action:path('app_admin_block_add'),attr: {class: "form d-flex flex-column flex-lg-row"}}) }}

    <!-- Aside Column -->
    <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
        <!-- Image Fields -->
        {% for f,label in {
            'imageIcon':'Image Icon',
            'image':'Desktop Image',
            'imageMobile':'Mobile Image',
            'background':'Background',
            'mobileBackground':'Mobile Background'
        } %}
            <div class="card card-flush py-4">
                <div class="card-header"><div class="card-title"><h2>{{ label }}</h2></div></div>
                <div class="card-body text-center pt-0">
                    <style>.image-input-placeholder { background-image: url('{{ asset('themes/media/svg/files/blank-image.svg') }}'); } [data-bs-theme="dark"] .image-input-placeholder { background-image: url('{{ asset('themes/media/svg/files/blank-image-dark.svg') }}'); }</style>
                    <div class="image-input image-input-empty image-input-outline image-input-placeholder mb-3" data-kt-image-input="true">
                        <div class="image-input-wrapper w-150px h-150px"></div>
                        <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change">
                            {{ form_widget(attribute(form, f), {attr:{accept:".png, .jpg, .jpeg, .webp"}}) }}
                        </label>
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel"></span>
                        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove"></span>
                    </div>
                    <div class="text-muted fs-7">Only PNG, JPG, JPEG, WebP</div>
                </div>
            </div>
        {% endfor %}

        <!-- Status -->
        <div class="card card-flush py-4">
            <div class="card-header"><div class="card-title"><h2>Status</h2></div></div>
            <div class="card-body pt-0">
                {{ form_widget(form.status) }}
                <div class="text-muted fs-7">Set block status</div>
            </div>
        </div>
    </div>

    <!-- Main Column -->
    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
        <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-semibold mb-n2">
            <li class="nav-item"><a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#gen">General</a></li>
            <li class="nav-item"><a class="nav-link text-active-primary pb-4" data-bs-toggle="tab" href="#adv">Advanced</a></li>
        </ul>

        <div class="tab-content">
            <!-- General Tab -->
            <div class="tab-pane fade show active" id="gen" role="tab-panel">
                <div class="d-flex flex-column gap-7 gap-lg-10">
                    <!--begin::General card-->
                    <div class="card card-flush py-4">
                        <div class="card-header">
                            <div class="card-title"><h2>General</h2></div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="mb-10 fv-row">
                                <label class="form-label">Title</label>
                                {{ form_widget(form.title, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Sub Title</label>
                                {{ form_widget(form.subTitle, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Slug</label>
                                {{ form_widget(form.slug, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Sort Order</label>
                                {{ form_widget(form.sortOrder, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Type</label>
                                {{ form_widget(form.type, {attr:{class:"form-control"}}) }}
                            </div>
                        </div>
                    </div>

                    <!--begin::Links & Relations card-->
                    <div class="card card-flush py-4">
                        <div class="card-header">
                            <div class="card-title"><h2>Links & Relations</h2></div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="mb-10 fv-row">
                                <label class="form-label">URL</label>
                                {{ form_widget(form.url, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Location</label>
                                {{ form_widget(form.location, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Video URL</label>
                                {{ form_widget(form.videoUrl, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Text Icon</label>
                                {{ form_widget(form.textIcon, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Kind</label>
                                {{ form_widget(form.kind, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Post</label>
                                {{ form_widget(form.post, {attr:{class:"form-control"}}) }}
                            </div>
                            <div class="mb-10 fv-row">
                                <label class="form-label">Category</label>
                                {{ form_widget(form.category, {attr:{class:"form-control"}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Advanced Tab -->
            {% if form.kindData is defined %}
                <div class="mt-10">
                    <h3 class="mb-5">Cấu hình theo kiểu Block</h3>

                    {% for field in form.kindData %}
                        <div class="mb-10 fv-row">
                            {{ form_label(field) }}
                            {{ form_widget(field, {attr: {class: "form-control"}}) }}
                            {{ form_errors(field) }}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}


            <div class="d-flex justify-content-end">
            <a href="{{ path('app_admin_block_index') }}" class="btn btn-light me-5">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <span class="indicator-label">Save Changes</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}
