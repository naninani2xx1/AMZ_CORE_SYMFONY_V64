{% extends 'Admin/base.html.twig' %}
{% block title %}CMS-Block Management{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/styles/setting.css') }}">
{% endblock %}

{% block toolbar %}
