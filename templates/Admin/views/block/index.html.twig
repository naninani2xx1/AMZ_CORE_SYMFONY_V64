        {% block toolbar_title %}Block Management{% endblock toolbar_title %}

        {% block toolbar_breadcrumbs %}
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a href="#" class="text-muted text-hover-primary">Block</a>
            </li>
            <!--end::Item-->
        {% endblock toolbar_breadcrumbs %}

        {% block toolbar_button_actions %}
            <a href="{{ path('app_admin_block_add') }}" class="btn btn-sm fw-bold btn-primary">Thêm mới</a>
        {% endblock toolbar_button_actions %}
    {% endembed %}
{% endblock %}

{% block body %}
    {{ component('TableBlockLiveComponent', {'id': "TableBlockLive"}) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
