{% embed 'Admin/partials/modal.html.twig' %}
    {% block title %}Add Menu{% endblock %}
    {% block modalClass %}modal-dialog-centered p-10 mw-900px{% endblock %}
    {% block body %}
        {{ form_start(form) }}
        <div class="fv-row mb-7">
            <!--begin::Label-->
            <label class="required fs-6 fw-semibold mb-2">Name</label>
            <!--end::Label-->
            <!--begin::Input-->
            {{ form_widget(form.name, {attr: {'class': "form-control fs-7", placeholder: "Enter name"}}) }}
            <!--end::Input-->
        </div>
        <div class="fv-row mb-7">
            <!--begin::Label-->
            <label class="required fs-6 fw-semibold mb-2">Position</label>
            <!--end::Label-->
            <!--begin::Input-->
            {{ form_widget(form.position) }}
            <!--end::Input-->
        </div>
        <div class="mb-7">
            <label class="fs-6 fw-semibold mb-2">Type</label>
            <div class="d-flex gap-4 gap-xl-6 mb-10" data-kt-buttons="true" data-kt-buttons-target="[data-kt-button]">
                {% for option in form.isRoot.children %}
                    <div>
                        <label class="btn btn-outline btn-outline-dashed btn-active-light-primary d-flex text-start p-6 "
                               data-kt-button="true">
                            <!--begin::Radio button-->
                            <span class="form-check form-check-custom form-check-solid form-check-sm align-items-start mt-1">
                        {{ form_widget(option, {attr: {'class': 'form-check-input'}}) }}
                    </span>
                            <!--end::Radio button-->
                            <span class="ms-5">
                        <span class="fs-4 fw-bold mb-1 d-block">{{ option.vars.label }}</span>
                        <span class="fw-semibold fs-7 text-gray-600">Withdraw money to your bank account per transaction under $50,000 budget</span>
                    </span>
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>
        <button type="button" class="btn btn-primary"
                data-action="click->Admin--menu-add#onSubmit">Submit</button>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}