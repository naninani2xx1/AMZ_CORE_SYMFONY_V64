{% extends 'Admin/base.html.twig' %}

{% block title %}CMS - Add Article{% endblock %}

{% block body %}
    {{ form_start(form, { attr: { class: "form d-flex flex-column flex-lg-row" }, action: path('app_admin_post_add') }) }}

    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">

        <!-- Card: Add New Article -->
        <div class="card card-flush py-4">
            <div class="card-header">
                <div class="card-title">
                    <h2>Add New Article</h2>
                </div>
            </div>
            <div class="card-body pt-0">

                <!-- Title -->
                <div class="mb-10 fv-row">
                    <label class="required form-label">Title</label>
                    {{ form_widget(form.title, { attr: { class: "form-control" } }) }}
                    {{ form_errors(form.title) }}
                </div>

                <!-- SubTitle -->
                <div class="mb-10 fv-row">
                    <label class="required form-label">SubTitle</label>
                    {{ form_widget(form.subTitle, { attr: { class: "form-control" } }) }}
                    {{ form_errors(form.subTitle) }}
                </div>

                <!-- Gallery -->
                <div class="mb-10 fv-row">
                    <label class="form-label">Gallery</label>
                    {{ form_widget(form.gallery, { attr: { class: "form-select" } }) }}
                    {{ form_errors(form.gallery) }}
                </div>

            </div>
        </div>

        <!-- Submit button -->
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_admin_article_index') }}" class="btn btn-light me-5">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <span class="indicator-label">Save Article</span>
                <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>

    </div>

    {{ form_end(form)   }}
{% endblock %}
