{% embed 'Admin/partials/modal.html.twig' %}
    {% block title %} {% if category is defined %}Edit{% else %}Add{% endif %} Topic{% endblock %}
    {% block modalClass %}modal-dialog-centered p-10 mw-900px{% endblock %}
    {% block body %}
        {{ form_start(form) }}
        <div class="fv-row mb-7">
            <!--begin::Label-->
            <label class="required fs-6 fw-semibold mb-2">Topic Name</label>
            <!--end::Label-->
            <!--begin::Input-->
            {{ form_widget(form.title, {attr: {'class': "form-control fs-7"}}) }}
            <!--end::Input-->
        </div>
        <button type="button" class="btn btn-primary"
                data-action="click->Admin--contact-topic-add#onSubmit">
            {% if category is defined %}Save changes{% else %}Submit{% endif %}
        </button>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}